<h1> The Front Page </h1>

{{#if currentUserId}}
  <button onclick="location.href = '/posts/new'; return false;"> Create New Post </button>
  <button onclick="location.href = '/logout'; return false;"> Logout </button>
{{else}}
  <button onclick="location.href = '/login'; return false;"> Login </button>
  <button onclick="location.href = '/sign-up'; return false;"> Sign Up </button>
{{/if}}


{{#each post}}
<div>
  <a href="/posts/{{this.id}}"> {{this.title}} </a>
  <p> {{this.summary}} </p>
</div>
{{/each}}
