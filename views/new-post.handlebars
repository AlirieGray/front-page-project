<form class="newPostForm" method="POST" action="/posts">
  <div class="form-group">
    <input type="text" name="title" id="post-title" placeholder="Title">
  </div>
  <div class="form-group">
    <input type="text" name="subreddit" id="post-subreddit" placeholder="Subreddit">
  </div>
  <div class="form-group">
    <textarea name="summary" id="post-summary" placeholder="Summary"></textarea>
  </div>
  <input type="hidden" name="userId" id="post-user-id" value={{currentUserId}} />
  <div>
    <button class="btn-flat" type="submit">Post</button>
  </div>
</form>
