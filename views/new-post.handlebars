<form method="POST" action="/posts/{{id}}">
  <legend>New Post</legend>
  <div class="form-group">
    <label for="post-title">Title</label>
    <input type="text" name="title" id="post-title" placeholder="Title">
  </div>
  <div class="form-group">
    <label for="post-summary">Summary</label>
    <textarea name="summary" id="post-summary" placeholder="Summary"></textarea>
  </div>
  <div class="form-group">
    <label for="post-subreddit">Subreddit</label>
    <input type="text" name="subreddit" id="post-subreddit" placeholder="Subreddit">
  </div>
  <input type="hidden" name="user" id="post-user" value={{currentUser}} />
  <div>
    <button type="submit">Post</button>
  </div>
</form>
